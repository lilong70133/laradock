map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

upstream octane-admin {
    server workspace:8800 weight=5 max_fails=3 fail_timeout=30s;
    keepalive 16;
}

server {
    listen 80;
    listen [::]:80;
    server_name admin.saas.test;
    server_tokens off;
    root /var/www/saas/admin/public;

    index index.php;

    charset utf-8;

    location /index.php {
        try_files /not_exists @octane-admin;
    }

    location / {
        try_files $uri $uri/ @octane-admin;
    }

    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }

    error_page 404 /index.php;

    location @octane-admin {
        set $suffix "";

        if ($uri = /index.php) {
            set $suffix ?$query_string;
        }

        proxy_http_version 1.1;
        proxy_set_header Host $http_host;
        proxy_set_header Scheme $scheme;
        proxy_set_header SERVER_PORT $server_port;
        proxy_set_header REMOTE_ADDR $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        proxy_pass http://octane-admin$suffix;
    }

    error_log /var/log/nginx/admin.saas_error.log;
    access_log /var/log/nginx/admin.saas_access.log;
}
